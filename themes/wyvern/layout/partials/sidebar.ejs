<div class="sidebar">
    <div class="list">
        <h2>
            <%- (type.charAt(0).toUpperCase() + type.slice(1)) %>
        </h2>
        <ul class="menu">
            <% site.pages.find({type: type}).sort('order').each(function (p) { %>
                <% var fileName = p.path.replace(/^.+?\/([\w-]+)\.html/, '$1') %>
                <li>
                    <a href="https://<%- theme.root_domain %>/<%- p.path %>" class="sidebar-link<%- page.title === p.title ? ' current' : '' %><%- p.is_new ? ' new' : '' %>"><%- p.title %></a>
                    <% if (page.title === p.title) { %>
                        <%- toc(page.content, {
                            list_number: false
                        }) %>
                    <% } %>
                </li>
            <% }) %>
        </ul>
    </div>
</div>
